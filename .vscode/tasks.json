{
    "tasks": [
        {
            "type": "shell",
            "label": "arm-none-eabi-gcc -mcpu=cortex-m4 -mthumb -mfloat-abi=hard build active file",
            "command": "arm-none-eabi-gcc -mcpu=cortex-m4 -mthumb -mfloat-abi=hard",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "."
            }
        }
    ],
    "version": "2.0.0"
}